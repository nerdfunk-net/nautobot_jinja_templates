{# include macros #}
{% import "./ios/helper/descr_ip.j2" as descrIp %}
{{ descrIp.description_and_ip(interface,config_context) }}
{%- if interface.mode == 'TAGGED' %}
 switchport
 switchport mode trunk
{% for vlan in interface.tagged_vlans %}
 switchport trunk allowed vlan add {{ vlan.name }}
{% endfor %}
{% endif %}
{% if interface.native_vlan is defined %}
 switchport trunk native vlan {{ interface.native_vlan.members.name }}
{% endif %}